{% if comments %}
    {% for comment in comments %}
        <div class="row" style="margin-bottom: 10px;">
            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-2">
                <img class="ownerImage" src="{{ asset(comment.user.showImage()) }}"/>
            </div>
            <div class="col-xs-9 col-sm-9 col-md-9 col-lg-10">
                <time datetime="{{ comment.createdAt|date('c') }}"><i>Created {{ comment.createdAt | timeAgo }}</i></time>
                <br>
                <p>
                    <i>By <b>{{ comment.user.name }} {{ comment.user.surname }}</b></i>
                </p>
                <p>{{ comment.content }}</p>
                <hr class="fancy-line">
            </div>
        </div>
        <br>
    {% endfor %}
    {% else %}
        No comments!
{% endif %}
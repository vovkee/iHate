{% if comments %}
    {% for comment in comments %}
        <div id="commentShow" class="row" style="margin-bottom: 10px;">
            <div class="col-lg-3">
                <img style="max-width: 100px;max-height: 100px;" class="ownerImage" src="{{ asset(comment.user.showImage()) }}"/>
            </div>
            <div class="col-lg-9">
                <time datetime="{{ comment.createdAt|date('c') }}"><i>Created {{ comment.createdAt | timeAgo }}</i></time>
                <br>
                <p>
                    <i>By <b>{{ comment.user.name }} {{ comment.user.surname }}</b></i>
                </p>
                <p>{{ comment.content }}</p>
            </div>
        </div>
        <hr class="fancy-line">
    {% endfor %}
    {% else %}
        No comments!
{% endif %}
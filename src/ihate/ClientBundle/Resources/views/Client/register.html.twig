{% extends "ihateClientBundle::layoutLoggedOut.html.twig" %}

{% block content %}
<div class="conteiner">
    <div class="content">
        <div class="row">
            <div class="col-md-8 col-lg-offset-2">
                <div class="regForms">
                    <form action="{{ path('account_create') }}" {{ form_enctype(form) }}  method="POST">

                        {{ form_label(form.user.name) }}
                        <ul class="error">{{ form_errors(form.user.name) }}</ul>
                        {{ form_widget(form.user.name, {'attr': {'class':'form-control','placeholder':'Enter your name'} }) }}
                        <br>

                        {{ form_label(form.user.surname) }}
                        <ul class="error">{{ form_errors(form.user.surname) }}</ul>
                        {{ form_widget(form.user.surname, {'attr': {'class':'form-control','placeholder':'Enter your surname'} }) }}
                        <br>

                        {{ form_label(form.user.email) }}
                        <ul class="error">{{ form_errors(form.user.email) }}</ul>
                        {{ form_widget(form.user.email, {'attr': {'class':'form-control','placeholder':'Enter your email'} }) }}
                        <br>

                        <ul class="error">{{ form_errors( form.user.password ) }}</ul>
                        {{ form_row( form.user.password.first, { 'attr':{'class':'form-control','label': 'Password:', 'placeholder':'Enter your password'}} ) }}
                        <br>
                        {{ form_row( form.user.password.second, { 'attr':{'class':'form-control','label': 'Repeat password:', 'placeholder':'Re-enter your password'}} ) }}
                        <br>

                        {{ form_label(form.user.gender) }}
                        <ul class="error">{{ form_errors(form.user.gender) }}</ul>
                        {{ form_widget(form.user.gender) }}
                        <br>
                        <br>

                        {{ form_label(form.terms) }}
                        <ul class="error">{{ form_errors(form.terms) }}</ul>
                        {{ form_widget(form.terms) }}

                        {{ form_rest(form) }}

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock content %}

<div class="row" style="margin-bottom: 10px;">
    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-2">
        <img class="ownerImage" src="{{ asset(post.user.showImage()) }}"/>
    </div>
    <div class="col-xs-9 col-sm-9 col-md-9 col-lg-10">
        <time datetime="{{ post.createdAt|date('c') }}"><i>Created {{ post.createdAt | timeAgo }}</i></time>
        <br>
        <p>
            <i>By <b>{{ post.user.name }} {{ post.user.surname }}</b></i>
        </p>
    </div>
</div>
<div class="line-1"></div>
<br>
<div class="imageContainer col-xs-12 col-sm-12 col-md-12 col-lg-12">
    {% if post.path %}
        <img src="{{ asset(post.showImage()) }}"/>
        <div class="row">
            <div class="line-2"></div>
        </div>
    {% endif %}

    {% if post.embed %}
    {% endif %}
</div>
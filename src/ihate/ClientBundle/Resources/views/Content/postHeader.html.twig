<div class="row" style="margin-bottom: -20px;">
    <div class="col-lg-3">
        <img class="ownerImage" src="{{ asset(post.user.showImage()) }}"/>
    </div>
    <div class="col-lg-9">
        <time datetime="{{ post.createdAt|date('c') }}"><i>Created {{ post.createdAt | timeAgo }}</i></time>
        <br>
        <p>
            <i>By <b>{{ post.user.name }} {{ post.user.surname }}</b></i>
        </p>
    </div>
</div>

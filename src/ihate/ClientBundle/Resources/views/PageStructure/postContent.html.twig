<div class="post">
    <div class="row" style="margin-bottom: 10px;">
        <div class="col-xs-3 col-sm-3 col-md-3 col-lg-2">
            <img class="ownerImage" src="{{ asset(app.user.showImage()) }}"/>
        </div>
        <div class="col-xs-9 col-sm-9 col-md-9 col-lg-10">
            <time datetime="{{ post.createdAt|date('c') }}"><i>Created {{ post.createdAt | timeAgo }}</i></time>
            <br>
            <p>
              <i>By <b>{{ app.user.name }} {{ app.user.surname }}</b></i>
            </p>
        </div>
    </div>

    <div class="row">
        <div class="imageContainer col-xs-12 col-sm-12 col-md-12 col-lg-12">
            {% if post.path %}
                    <img src="{{ asset(post.showImage()) }}"/>
            {% endif %}

            {% if post.embed %}
            {% endif %}
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <p class="postText">{{ post.text|slice(0, 255) }}</p>
            {% if post.text|length > 255 %}
                    <p class="continue"><a href="{{ path('showPost', { 'id': post.id }) }}">Continue reading...</a></p>
            {% else %}
                <a href="{{ path('showPost', { 'id': post.id }) }}" type="button" class="btn-group-default btn-xs"><span class="glyphicon glyphicon-comment"></span> Comment</a>
            {% endif %}

                <button type="button" class="btn btn-danger btn-xs">
                    <span class="glyphicon glyphicon-fire"></span> ihate
                </button>
        </div>
    </div>
</div><br>